  "description": "BlockMed V2 - Blockchain-Based Prescription Verification & Anti-Fake Medicine Tracking System",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "blockchain": "npx hardhat node",
    "ganache": "npx ganache --chain.chainId 31337 --wallet.deterministic --server.host 127.0.0.1 --server.port 8545",
