{
  "name": "blockmed-v2",
  "version": "2.0.0",
  "description": "BlockMed V2 - Blockchain-Based Prescription Verification & Anti-Fake Medicine Tracking System",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "blockchain": "npx hardhat node",
    "ganache": "npx ganache --chain.chainId 31337 --wallet.deterministic --server.host 127.0.0.1 --server.port 8545",
    "deploy": "FORCE_DEPLOY=1 npx hardhat run scripts/check-and-deploy.cjs --network localhost",
    "deploy:check": "npx hardhat run scripts/check-and-deploy.cjs --network localhost",
    "deploy:raw": "npx hardhat run scripts/deploy.cjs --network localhost",
    "deploy:polygon": "npx hardhat run scripts/deploy.js --network polygon",
    "test": "npm run test:blockchain",
    "test:all": "node scripts/test-all-features.mjs",
    "test:blockchain": "npx hardhat test test/BlockMedV2.test.cjs",
    "indexer": "node scripts/indexer/index.js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "fund": "echo 'Usage: RECIPIENT_ADDRESS=0x... npm run fund' && npx hardhat run scripts/fund-wallet.cjs --network localhost",
    "verify:user": "echo 'Usage: USER_ADDRESS=0x... npm run verify:user' && npx hardhat run scripts/verify-user.cjs --network localhost",
    "start": "concurrently -k -n node,app -c blue,green \"npm run blockchain\" \"wait-on -t 60000 tcp:127.0.0.1:8545 && npm run deploy && npm run dev\"",
    "sync:github": "node sync-github.js",
    "sync:github:ps": "powershell -ExecutionPolicy Bypass -File sync-github.ps1 -Force",
    "sync:github:git": "git config --global user.email 'sync@blockmed.local' && git config --global user.name 'BlockMed Sync' && git remote add github-sync https://github.com/erajt571/BlockMed.git 2>/dev/null || true && git fetch github-sync main && git merge github-sync/main",
    "verify:sync": "node verify-sync-tools.js",
    "upload:github": "node upload-to-github.js",
    "upload:github:ps": "powershell -ExecutionPolicy Bypass -File upload-to-github.ps1",
    "upload:github:bash": "bash upload-to-github.sh",
    "upload:github:batch": "upload-to-github.bat"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "ethers": "^6.9.0",
    "framer-motion": "^10.16.16",
    "html5-qrcode": "^2.3.8",
    "i18next": "^23.7.11",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-datepicker": "^4.25.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^13.5.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.3",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^4.9.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "ganache": "^7.9.2",
    "hardhat": "^2.19.4",
    "postcss": "^8.4.32",
    "better-sqlite3": "^11.6.0",
    "express": "^4.21.0",
    "solhint": "^4.5.4",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  }
}
